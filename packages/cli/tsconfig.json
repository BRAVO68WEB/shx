{
	"compilerOptions": {
		"lib": ["es2018", "es5", "dom"],
		"typeRoots": ["node_modules/@types", "types"],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"target": "ESNext",
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"sourceMap": false,
		"noImplicitAny": false,
		"allowJs": true
	},
	"exclude": ["node_modules/**/*", "build/**/*"],
	"include": ["**/*.ts", "**/*.tsx", "**/*.json", "**/*.js"],
	"ts-node": {
		"swc": true
	},
}
